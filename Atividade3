package avsoma1;

import java.util.Scanner;

public class Conorado {

	public static void main(String[] args) {
	// TODO Auto-generated method stub
	Scanner ler = new Scanner(System.in); // Declarar Scanner
	int a; // Declaração de variável
	
	System.out.println("Qual é valor do dia da semana?"); 
	a = ler.nextInt(); // Inserir valor da variável
	
	if (a==1) {    //Processamento de dados em busca de um igual ao valor da variável
		System.out.println("É domingo!");
	}
	else if (a==2) {
		System.out.println("É segunda-feira!");
	}
	else if (a==3) {
		System.out.println("É terça-feira!");
	}
	else if (a==4) {
		System.out.println("É quarta-feira!");
	}
	else if (a==5) {
		System.out.println("É quinta-feira!");
	}
	else if (a==6) {
		System.out.println("É sexta-feira!");
	}
	else if (a==7) {
		System.out.println("É sábado!");
	}
	else {  // Caso valor não seja entre 1 a 7
  		System.out.println("Valor inválido!");
	}
		

	}

}
